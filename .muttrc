# passwords
source 'echo "$( pw=$( secret-tool lookup user guro@fb.com domain outlook.office365.com ); echo set smtp_pass=\"$pw\" )" |'

# for SMTP
set use_envelope_from=yes
set realname="Roman Gushchin"
set from=guro@fb.com # this is important some people have different email vs user name
set smtp_url="smtp://guro@fb.com@outlook.office365.com:587"
set smtp_authenticators="login"

set editor="emacs -nw %s"

set folder = "~/.mail/fb"
set spoolfile = "+/Inbox"
set postponed = "+/Drafts"
set trash = "+/Deleted Items"
set record = ""

set sort = reverse-date-received
set sort_aux=reverse-last-date-received

#set sort=threads
#set sort_browser=date

set alias_file= ~/.mutt_aliases
set sort_alias= alias
set reverse_alias=yes
source $alias_file

mailboxes "+/Inbox/"
mailboxes "+/Inbox/mm"
mailboxes "+/Inbox/kernel"
mailboxes "+/Inbox/tasks"
mailboxes "+/Inbox/alerts"

set sidebar_width=20
set sidebar_visible=yes

bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open

unset pipe_decode

macro index a '| git am'
macro index A '! git am --abort'
macro index R '! mbsync -a'
